{
  "name": "parachord-desktop",
  "version": "0.8.0-alpha.3",
  "description": "Parachord Desktop - Multi-source music player with cross-platform resolver support",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "prebuild": "node scripts/build-native.js",
    "prebuild:mac": "node scripts/build-native.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:native": "node scripts/build-native.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:playback": "jest tests/playback/",
    "test:resolver": "jest tests/resolver/",
    "test:legacy": "node tests/resolution-scheduler.test.js && node tests/youtube-resolver.test.js && node tests/browser-extension.test.js",
    "package:extension": "node scripts/package-extension.js"
  },
  "keywords": [
    "music",
    "player",
    "spotify",
    "bandcamp",
    "qobuz",
    "resolver",
    "streaming",
    "electron"
  ],
  "author": {
    "name": "Jason Herskowitz",
    "email": "team@parachord.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "jest": "^30.2.0",
    "jose": "^6.1.3"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^3.5.0",
    "dotenv": "^16.3.1",
    "electron-store": "^6.0.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "music-metadata": "^7.0.0",
    "node-id3": "^0.2.6",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.parachord.desktop",
    "productName": "Parachord",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github",
      "owner": "Parachord",
      "repo": "parachord"
    },
    "files": [
      "**/*",
      "!.DS_Store",
      "!.git",
      "!.gitignore",
      "!npm-debug.log",
      "!dist",
      "!**/*.md",
      "!collection.json",
      "!native"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "mcp-stdio.js",
      "native-messaging/**"
    ],
    "extraResources": [
      {
        "from": "resources/keys/",
        "to": "keys/",
        "filter": [
          "*.p8"
        ]
      }
    ],
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": false,
      "signIgnore": ["MusicKitHelper\\.app"],
      "extendInfo": {
        "NSAppleMusicUsageDescription": "Parachord needs access to Apple Music to play songs from your library and subscription."
      },
      "target": [
        "dmg",
        "zip"
      ],
      "extraResources": [
        {
          "from": "resources/bin/darwin/",
          "to": "bin/darwin/",
          "filter": [
            "**/*"
          ]
        }
      ],
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "icon": "assets/icons/icon.icns",
      "iconSize": 80,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 180
        },
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icons",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "AudioVideo"
    }
  }
}
